# Aliases

alias ls='ls --color=auto'
alias tree='tree -C'
alias less=$PAGER
alias cal='ncal -b'
alias ncal='ncal -b'
alias top='htop'
alias apt-get='apt'

alias dict='dict -d wn'
alias diff='diff --color'
alias thes='dict -d moby-thesaurus'
alias budget='sc-im ~/Documents/budget.sc'

alias mbsync='mbsync -c "$XDG_CONFIG_HOME"/isync/mbsyncrc'
